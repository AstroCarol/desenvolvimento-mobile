<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifrn.tads.movies.imckotlin.MainActivity">

    <EditText
        android:id="@+id/editPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Peso"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editPeso"
        android:layout_alignRight="@+id/editPeso"
        android:layout_below="@+id/editPeso"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Altura"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editAltura"
        android:layout_alignRight="@+id/editAltura"
        android:layout_below="@+id/editAltura"
        android:layout_marginTop="33dp"
        android:text="Calcular" />

</RelativeLayout>
